            @Html.ActionLink("Add Resort", "AddResort", null, new { @class = "btn btn-primary" })


        </div>
        <div class="col-lg-4">
            <h1> Rooms</h1>

            <table class="table table-hover">
                <thead>
                    <tr>
                        <th class="active">Hotel Name</th>
                        <th>City </th>
                        <th>Number of Guests</th>
                    </tr>
                </thead>
                <tbody>
                    
                    @foreach (var item in Model.RoomList)
                    {

                        if (item.Hotel != null)
                        {


                     <tr>
                         <td class="active">@item.Hotel.Name </td>
                         <td>@item.Hotel.City </td>
                         <td>@item.numberofGuests </td>
