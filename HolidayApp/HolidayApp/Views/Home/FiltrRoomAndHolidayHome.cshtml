@using HolidayApp.Models
@model SearchModelView
@{
    ViewBag.Title = "FiltrRoomAndHolidayHome";
}

<div class="container">

    <div class="row">

        <div class="col-lg-4" style="background-color:#F8FD8E">
            @using (Html.BeginForm("FiltrRoomAndHolidayHome", "Home"))
            {
                <div class="form-group">
                    @Html.Label("Country")
                    @Html.TextBox("country", null, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.Label("City")
                    @Html.TextBox("city", null, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.DropDownList("choose", EnumHelper.GetSelectList(typeof(Choose)), new { @class = "form-control" })

                </div>
                <div class="form-group">
                    @Html.Label("Number of Guests")
                    @Html.TextBox("guestnumber", null, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.Label("Number of Beds")
                    @Html.TextBox("bednumber", null, new { @class = "form-control" })
                </div>

                <div>
                    <input type="submit" value="Search" class="form-control" />
                </div>
            }
        </div>

        <div class="col-lg-8">
            @*@foreach (var item in Model.holidayhomes)
                {
