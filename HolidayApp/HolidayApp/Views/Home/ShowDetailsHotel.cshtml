@using HolidayApp.Entities
@model Hotel
@{
    ViewBag.Title = "ShowDetailsHotel";
}



<h2>@Model.Name</h2>

<div class="container">
   
         

        <div class="row">
            @foreach (var item in Model.Images)
            {
                
                    


                <div class="col-md-4">
                    <div class="thumbnail">
                        <a href="@item.Hotel.Name">
                            <img src="@Url.Content(@item.ImagePath)"  class="img-responsive">
                         


                        </a>
                    </div>
                </div>





            }
        </div>
    

   
    
    <div class="row">
       
        <div class="col-lg-4" id="Stats">
            <table class="table-responsive">

                <tbody>
                    <tr>
                        <td>Name </td>
                        <td>@Model.Name</td>
                    </tr>
                    <tr>
                        <td>Country</td>
                        <td>@Model.Country</td>
                    </tr>
                    <tr>
                        <td>City</td>
                        <td>@Model.City</td>
                    </tr>
                    <tr>
                        <td>Telephone</td>
                        <td>@Model.TelephoneNumber</td>
                    </tr>

                </tbody>



            </table>





        </div>
    </div>

</div>