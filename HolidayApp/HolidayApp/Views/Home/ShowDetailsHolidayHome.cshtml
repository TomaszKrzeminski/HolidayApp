@using HolidayApp.Entities
@model HolidayHome
@{
    ViewBag.Title = "ShowDetailsRoom";
}

<h2>ShowDetailsHolidayHome</h2>

<div class="container">
    <div class="row">
        <div class="col-lg-4">
            @foreach (var item in Model.Images)
            {
                <img src="@Url.Content(@item.ImagePath)" class="img-responsive">
            }
        </div>


    </div>
    <div class="row">
        <div class="col-lg-12" id="PicturesSmall">

        </div>
    </div>
    <div class="row">
        <div class="col-lg-8" id="Description">

        </div>
        <div class="col-lg-4" id="Stats">
            <table class="table-striped">

                <tbody>
                    <tr>
                        <td>Price </td>
                        <td>@Model.Price</td>
                    </tr>
                    <tr>
                        <td>Number of Guests</td>
                        <td>@Model.numberofGuests</td>
                    </tr>
                    <tr>
                        <td>Number of Beds</td>
                        <td>@Model.numberofBeds</td>
                    </tr>
                    <tr>
                        <td>Double Bed</td>
                        <td>  @(Model.doubleBed ? "Yes" : "No")</td>


                    </tr>
                    <tr>
                        <td>Are pets allowed </td>
                        <td>@(Model.petsAllowed ? "Yes" : "No")</td>
                    </tr>
                    <tr>
                        <td>Kitchen</td>
                        <td>@(Model.Kitchen ? "Yes" : "No")</td>
                    </tr>
                    <tr>
                        <td>Toilet</td>
                        <td>@(Model.Toilet ? "Yes" : "No")</td>
                    </tr>
                    <tr>
                        <td>Number of TV</td>
                        <td>@Model.numberofTelevisions</td>
                    </tr>
                    <tr>
                        <td>Number of Floors</td>
                        <td>@Model.numberofFloors</td>
                    </tr>

                </tbody>



            </table>





        </div>
    </div>

</div>

<div class="container">
    <div class="row">
        <div class="col-lg-8">
            @using (Html.BeginForm("ReserveHolidayHome", "Client"))
            {

                <div class="form-group">
                    @Html.Label("Reserve From")
                    @Html.TextBox("dateFrom", "",  new { @class = "date-picker"})
                </div>
                <div class="form-group">
                    @Html.Label("Reserve To")
                    @Html.TextBox("dateTo", "", new { @class = "date-picker" })
                </div>
               <div>
                   @Html.Hidden("holidayhotelId", Model.HolidayHomeId)
                  
                  

               </div>

                <div>
                    <input type="submit" value="Book" class="form-control" />
                </div>






            }
        </div>
    </div>
</div>

@section Scripts
{
    
    <script type="text/javascript">
    $(function () {
       $('.date-picker').datepicker(); 
    });
</script>
    
    
    
    }