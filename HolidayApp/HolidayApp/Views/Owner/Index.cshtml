@using HolidayApp.Models
@model HolidayViewModel
@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="row">

        <div class="col-lg-4">
            <h1> Hotels</h1>

            <table class="table table-responsive">
                <tbody>
                    @foreach (var item in Model.HotelList)
            {
                if (item != null)
                {
                            <tr>
                                <td class="active">
                                    @item.Name
                                </td>
                                <td>
                                    @item.City
                                </td>
                                <td>
                                    @Html.ActionLink("Edit Hotel", "EditHotel", new { Id = item.HotelId }, new { @class = "btn btn-warning" })
                                </td>
                            </tr>

                        }

                    }

                </tbody>
            </table>


