            {

                <div class="row" style="background-color:#A0FCD2">
                    <div class="col-lg-4">
                        @if (item.Images != null && item.Images.Count > 0)
                        {
                            <img src="@Url.Content(item.Images.FirstOrDefault().ImagePath)" />
                        }

                    </div>

                    <div class="col-lg-8">

                        <h3>Number of guests  @item.numberofGuests    Number of beds @item.numberofBeds</h3>

